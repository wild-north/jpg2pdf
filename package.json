{
  "name": "jpg2pdf",
  "version": "1.1.0",
  "description": "Convert JPG images to PDF with modern web interface",
  "main": "backend/server.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "nodemon backend/server.js",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "cd frontend && npm run build",
    "build:prod": "docker compose build --no-cache",
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "start:backend": "node backend/server.js",
    "start:frontend": "cd frontend && npm run dev",
    "start:prod": "docker compose up -d --remove-orphans",
    "cli": "node backend/pdf-generator.js"
  },
  "keywords": [
    "jpg",
    "pdf",
    "convert",
    "image",
    "nodejs",
    "react",
    "web"
  ],
  "author": "Serhii Stryzhak",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.21.2",
    "multer": "^1.4.5-lts.1",
    "pdf-lib": "^1.17.1",
    "sharp": "^0.34.3"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.1.10"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
